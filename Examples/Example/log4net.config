<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <log4net>
    <appender name="ConsoleLog" type="log4net.Appender.ConsoleAppender">
      <layout type="log4net.Layout.PatternLayout">
        <param name="ConversionPattern" value="%date [%thread] %-5level [%logger(%method:%line)] - %m%n"/>
      </layout>
    </appender>
    <appender name="LogFileAppender" type="log4net.Appender.RollingFileAppender">
      <file value="d:\logs\" />
      <appendToFile value="true" />
      <rollingStyle value="Date" />
      <datePattern value="\\yyyy-MM\\yyyy-MM-dd'.log'" />
      <staticLogFileName value="false" />
	  <encoding value="utf-8"/>
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date [%-3thread] %-5level [%logger(%method:%line)] - %m%n" />
      </layout>
    </appender>
    <root>
      <level value="Info"/>
      <!--<appender-ref ref="ConsoleLog"/>-->
      <appender-ref ref="LogFileAppender"/>
    </root>
  </log4net>

</configuration>